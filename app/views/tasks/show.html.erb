<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2><%= @task.title %></h2>
                </div>
                <div class="card-body">
                    <p><%= @task.details %></p>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="task[completed]" value="true" <%= @task.completed ? "checked" : "" %> />
                        <label class="form-check-label">
                            <%= @task.completed ? "Completed" : "Not Completed" %>
                        </label>
                    </div>
                </div>
                <div class="card-footer">
                    <%= link_to "<i class='fas fa-edit'></i> Edit".html_safe, edit_task_path(@task), class: "btn btn-primary" %> |
                    <%= link_to "<i class='fas fa-arrow-left'></i> Back".html_safe, tasks_path, class: "btn btn-secondary" %>
                </div>
            </div>
        </div>
    </div>
</div>