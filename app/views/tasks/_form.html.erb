<%= form_with model: @task, class: "form-group" do |form| %>
    <div class="form-group">
        <%= form.label :title, class: "font-weight-bold" %>
        <%= form.text_field :title, id: :task_title, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :details, class: "font-weight-bold" %>
        <%= form.text_field :details, id: :task_details, class: "form-control" %>
    </div>

    <div class="form-group form-check">
        <%= form.check_box :completed, id: :task_completed, class: "form-check-input" %>
        <%= form.label :completed, class: "form-check-label font-weight-bold" %>
    </div>

    <div class="form-group">
        <%= form.submit "Save", class: "btn btn-primary" %>
        <%= link_to "<i class='fas fa-arrow-left'></i> Cancel".html_safe, tasks_path, class: "btn btn-secondary" %>
    </div>
<% end %>