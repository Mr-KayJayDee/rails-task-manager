<div style="display: flex; justify-content: center;">
    <div style="width: 50%;">
        <h2>Tasks</h2>

        <ul class="list-group">
            <% @tasks.each do |task| %>
                <li class="list-group-item">
                    <%= check_box_tag "completed[]", task.id, task.completed, class: "form-check-input" %>
                    <%= link_to task_path(task) do %>
                        <strong><%= task.title %></strong>
                    <% end %>
                    <%= link_to "<i class='fas fa-trash'></i>".html_safe,
                        task_path(task),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "btn btn-danger btn-sm float-right"
                    %>
                </li>
            <% end %>
        </ul>

        <%= link_to "<i class='fas fa-plus'></i> New Task".html_safe, new_task_path, class: "btn btn-primary" %>
    </div>
</div>